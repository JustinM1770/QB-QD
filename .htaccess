# QuickBite - Configuración Apache/Cloudflare
# Actualizado: 17 de enero de 2026

# ==========================================
# BLOQUEAR ARCHIVOS SENSIBLES
# ==========================================
# Bloquear extensiones sensibles (excepto manifest.json para PWA)
<FilesMatch "\.(env|log|sh|sql|lock|tar|gz|tar\.gz|zip|bak|backup|old|orig|swp|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear archivos de configuración específicos
<FilesMatch "^(composer\.json|composer\.lock|package\.json|package-lock\.json|phpunit\.xml|\.gitignore|Makefile)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear archivos Markdown excepto en assets (documentación técnica no pública)
<FilesMatch "\.md$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir manifest.json para PWA
<Files "manifest.json">
    Order allow,deny
    Allow from all
</Files>

# Bloquear acceso a carpetas sensibles
<DirectoryMatch "(/_testing_files/|/backup_comparacion/|/tests/|/migrations/|/\.git/|/\.claude/)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# ✅ REGLAS PARA CLOUDFLARE
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquear acceso a archivos de sistema
    RewriteRule ^\.env - [F,L]
    RewriteRule ^\.git - [F,L]
    RewriteRule ^config/ - [F,L]
    RewriteRule ^logs/ - [F,L]
    
    # Permitir OPTIONS para CORS
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# ✅ HEADERS DE SEGURIDAD
<IfModule mod_headers.c>
    # CORS Headers - Dominio específico para producción
    Header always set Access-Control-Allow-Origin "https://quickbite.com.mx"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header always set Access-Control-Allow-Credentials "true"
    
    # Security Headers
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache control para archivos PHP
    <FilesMatch "\.(php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# ✅ PHP CONFIGURACIÓN DE SEGURIDAD
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag display_startup_errors Off
    php_flag expose_php Off
    php_flag log_errors On
    php_value error_log /var/www/html/logs/php_errors.log
</IfModule>

# ✅ REGLAS ESPECÍFICAS PARA PROCESS_PAYMENT.PHP
<Files "process_payment.php">
    Order allow,deny
    Allow from all
    
    # Permitir solo POST y OPTIONS
    <RequireAll>
        <RequireAny>
            Require env REQUEST_METHOD=POST
            Require env REQUEST_METHOD=OPTIONS
        </RequireAny>
    </RequireAll>
</Files>

# ✅ PROTECCIÓN CONTRA BOTS MALICIOSOS
<IfModule mod_rewrite.c>
    # Bloquear user agents sospechosos pero permitir navegadores legítimos
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider) [NC]
    RewriteCond %{REQUEST_URI} !^/(process_payment\.php|checkout\.php|api/) [NC]
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# ✅ CONFIGURACIÓN PHP
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 30
    php_value memory_limit 256M
</IfModule>

# ✅ COMPRESIÓN GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# ✅ EVITAR DIRECTORIO LISTING
Options -Indexes

# ✅ PROTEGER ARCHIVOS SENSIBLES
<FilesMatch "(\.env|config\.php|\.htaccess|\.git)">
    Order allow,deny
    Deny from all
</FilesMatch>