{
    "name": "quickbite/delivery-platform",
    "description": "Plataforma de delivery de comida para MÃ©xico",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "mercadopago/dx-php": "^3.7",
        "phpmailer/phpmailer": "^6.10",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "QuickBite\\": "src/",
            "QuickBite\\Models\\": "models/",
            "QuickBite\\Services\\": "services/",
            "QuickBite\\Config\\": "config/"
        },
        "files": [
            "config/env.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "QuickBite\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
